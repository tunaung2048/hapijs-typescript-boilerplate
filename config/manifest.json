{
    "server": {
        "$filter": "env",
        "$default": {
            "host": "localhost",
            "port": 3000
        },
        "production": {
            "host": {
                "$env": "NODE_HOST"
            },
            "port": {
                "$env": "NODE_PORT"
            }
        },
        "development": {
            "host": "localhost",
            "port": 3000
        }
    },
    "register": {
        "$filter": "env",
        "production": {
            "plugins": [{
                    "plugin": "@hapi/cookie"
                },
                {
                    "plugin": "@hapi/vision"
                },
                {
                    "plugin": "@hapi/inert"
                },
                {
                    "plugin": "hapi-swagger",
                    "options": {
                        "info": {
                            "title": "test api documentation"
                        }
                    }
                },
                {
                    "plugin": "blipp",
                    "options": {
                        "showAuth": true
                    }
                },
                {
                    "plugin": "laabr",
                    "options": {
                        "formats": {
                            "onPostStart": ":time :start :level :message"
                        },
                        "indent": 0
                    }
                },

                {
                    "plugin": "./plugins/staticFile",
                    "options": {}
                },
                {
                    "plugin": "./plugins/home",
                    "options": {}
                },
                {
                    "plugin": "./plugins/api",
                    "options": {},
                    "routes": {
                        "prefix": "/api/v1"
                    }
                }
            ],
            "options": {}
        },
        "development": {
            "plugins": [{
                    "plugin": "@hapi/cookie"
                },
                {
                    "plugin": "@hapi/vision"
                },
                {
                    "plugin": "@hapi/inert"
                },
                {
                    "plugin": "hapi-swagger",
                    "options": {
                        "info": {
                            "title": "test api documentation"
                        }
                    }
                },
                {
                    "plugin": "blipp",
                    "options": {
                        "showAuth": true
                    }
                },
                {
                    "plugin": "laabr",
                    "options": {
                        "formats": {
                            "onPostStart": ":time :start :level :message"
                        },
                        "indent": 0
                    }
                },

                {
                    "plugin": "./plugins/static-file",
                    "options": {}
                },
                {
                    "plugin": "./plugins/home",
                    "options": {}
                },
                {
                    "plugin": "./plugins/product",
                    "options": {},
                    "routes": {
                        "prefix": "/api/v1"
                    }
                }
            ],
            "options": {}
        },
        "staging": {
            "plugins": [{
                    "plugin": "@hapi/cookie"
                },
                {
                    "plugin": "@hapi/vision"
                },
                {
                    "plugin": "@hapi/inert"
                },
                {
                    "plugin": "hapi-swagger",
                    "options": {
                        "info": {
                            "title": "test api documentation"
                        }
                    }
                },
                {
                    "plugin": "Blipp",
                    "options": {
                        "showAuth": true
                    }
                },
                {
                    "plugin": "laabr",
                    "options": {
                        "formats": {
                            "onPostStart": ":time :start :level :message"
                        },
                        "indent": 0
                    }
                },

                {
                    "plugin": "./plugins/static-file",
                    "options": {}
                },
                {
                    "plugin": "./plugins/greet",
                    "options": {}
                },
                {
                    "plugin": "./plugins/account",
                    "options": {},
                    "routes": {
                        "prefix": "/api/v1"
                    }
                },
                {
                    "plugin": "./plugins/product",
                    "options": {},
                    "routes": {
                        "prefix": "/api/v1"
                    }
                }
            ],
            "options": {}
        }
    }
}