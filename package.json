{
  "name": "hapijs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "hapi.js typescript project boilerplate",
  "main": "server.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch './**/*' -e ts,tsx --exec ts-node ./server.ts -r dotenv/config",
    "lint": "tslint -p tsconfig.json -c tslint.json && tslint -p tsconfig.test.json -c tslint.json",
    "compile": "tsc && node ./dist/server.js",
    "copy:assets": "rsync -av assets dist/",
    "copy:views": "rsync -av views dist/",
    "build": "tsc -p tsconfig.json",
    "build:all": "npm run lint && npm run build && npm run copy:assets && npm run copy:views",
    "start": "node dist/server.js -r dotenv/config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tunaung2048/hapijs-typescript-boilerplate.git"
  },
  "keywords": [
    "node",
    "hapi",
    "typescript"
  ],
  "author": "Tun Tun Aung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tunaung2048/hapijs-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/tunaung2048/hapijs-typescript-boilerplate#readme",
  "dependencies": {
    "@hapi/boom": "^7.4.11",
    "@hapi/cookie": "^10.1.2",
    "@hapi/glue": "^6.2.0",
    "@hapi/hapi": "^18.4.0",
    "@hapi/inert": "^5.2.2",
    "@hapi/joi": "^16.1.8",
    "@hapi/vision": "^5.5.4",
    "@hapi/wreck": "^16.0.1",
    "bcrypt": "^3.0.7",
    "blipp": "^4.0.1",
    "confidence": "^4.0.2",
    "dotenv": "^8.2.0",
    "handlebars": "^4.5.3",
    "hapi-swagger": "^11.1.0",
    "knex": "^0.20.4",
    "laabr": "^5.1.5",
    "objection": "^2.0.7",
    "pg": "^7.14.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/confidence": "^1.4.30",
    "@types/cookie": "^0.3.3",
    "@types/dotenv": "^8.2.0",
    "@types/hapi__glue": "^6.1.0",
    "@types/hapi__hapi": "^18.2.6",
    "@types/hapi__joi": "^16.0.4",
    "@types/hapi__vision": "^5.5.1",
    "@types/inert": "^5.1.2",
    "@types/knex": "^0.16.1",
    "@types/uuid": "^3.4.6",
    "@types/vision": "^5.3.6",
    "@types/wreck": "^14.0.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  }
}
